<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:paddingTop="10dp"

        >

        <ProgressBar
            android:id="@+id/product_item_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp" />

        <LinearLayout
            android:id="@+id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Product item"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/popup_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Product item"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/popup_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Product item"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/popup_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Product item"
                android:textSize="10dp" />

        </LinearLayout>






        <LinearLayout
            android:layout_below="@id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <Button
                android:id="@+id/contact_button"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Contact"/>

            <Button
                android:id="@+id/cancel_button"
                android:background="@color/cancelButton"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Cancel"/>

        </LinearLayout>











    </RelativeLayout>

</RelativeLayout>